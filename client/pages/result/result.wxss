.result--title{
  font-size:30rpx;
  width:100%;
  padding:16rpx 20rpx;
  color:#888;
  text-align: center;
}
.good__list{
  width: 100%;
  flex-direction: row;
  padding: 0 32rpx;
}

.good__item{
  width: 50%;
  padding: 20rpx;
  box-sizing: border-box; 
  display:inline-flex;
  flex-direction:column;
  justify-content: center;
}
.good__pic{
  width: 100%;
  height: 300rpx;
  padding: 40rpx;
  box-sizing: border-box;
}
.good__item text{
  display: flex;
  width: 100%;
  /* background-color: blue; */
  line-height: 1.5em;
  /* justify-content: center; */
}
.good__price{
  color: #b4282d;
  font-size: 36rpx;
}