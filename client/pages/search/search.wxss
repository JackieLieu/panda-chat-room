.search__index{
  width: 100%;
  height: 100%;
  background-color: #eaecef;
}
.search__com{
  width: calc(100% - 32rpx);
  margin: auto;
}

.search__labels{
  width: calc(100% - 32rpx);
  margin: 10rpx 16rpx;
  display: inline-flex;
  flex-wrap: wrap;
}
.label--item{
  display: inline-flex;
  float: left;
  padding: 8rpx 12rpx;
  background-color: #fff;
  margin: 8rpx;
  margin-right: 16rpx;
  margin-left: 0;
  border-radius: 8rpx;
  color: #666;
}


.goods__list{
    /* margin-top: 20rpx; */
    background-color: #fff;
}

.list--title{
  text-align: center;
  padding: 16rpx 0;
  border-bottom: 2rpx solid #eaecef;
}